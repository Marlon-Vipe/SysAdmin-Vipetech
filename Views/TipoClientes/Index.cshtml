@model IEnumerable<empleados.Models.TipoCliente>

@{
    ViewData["Title"] = "Index";
}
<div class="content-wrapper pl-5">
<h1>Tipo de clientes</h1>

<p>
        <a type="button" class="btn btn-dark" asp-action="Create">Crear tipo de cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                        <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar </a>
                        <a type="button" class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Listado </a>
                        <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar </a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
