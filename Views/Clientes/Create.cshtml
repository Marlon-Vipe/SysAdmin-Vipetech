@model empleados.Models.Cliente

@{
    ViewData["Title"] = "Create";
}
<div class="content-wrapper pl-5">
<h1>Crear cliente</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
        <div class="col-md-4" style="width:100%; flex: auto; max-width: 100% ">
            <form asp-action="Create" style="width:100%; max-width: 100%"  >
                <div asp-validation-summary="ModelOnly" class="text-danger form-row "></div>
                <div style="width:100%; max-width: 100%; display: flex">
                    <div class="pamoverlo1  col">
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Apellido" class="control-label"></label>
                            <input asp-for="Apellido" class="form-control" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cedula" class="control-label"></label>
                            <input asp-for="Cedula" class="form-control" />
                            <span asp-validation-for="Cedula" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Telefono" class="control-label"></label>
                            <input asp-for="Telefono" class="form-control" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="IdCiudad" class="control-label"></label>
                            <select asp-for="IdCiudad" class="form-control" asp-items="ViewBag.IdCiudad"></select>
                        </div>
                    </div>
                    <div class="pamoverlo2  col">
                        <div class="form-group">
                            <label asp-for="IdDireccion" class="control-label"></label>
                            <select asp-for="IdDireccion" class="form-control" asp-items="ViewBag.IdDireccion"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="IdTienda" class="control-label"></label>
                            <select asp-for="Nombre" class="form-control" asp-items="ViewBag.IdTienda"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="IdTipoVenta" class="control-label"></label>
                            <select asp-for="IdTipoVenta" class="form-control" asp-items="ViewBag.IdTipoVenta"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="TipoCliente" class="control-label"></label>
                            <select asp-for="TipoCliente" class="form-control" asp-items="ViewBag.TipoCliente"></select>
                        </div>
                    </div>
                </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a type="button" class="btn btn-link" asp-action="Index">Volver a la lista</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
